<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionBarTitleStyle">
        <item name="android:textColor">@color/actionbar_title_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ActionBarSubtitleStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/actionbar_subtitle_color</item>
    </style>

    <style name="TextDrawerNormal">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/actionbar_title_color</item>
    </style>

    <style name="CardTextPrimary">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="CardTextSecondary">
        <item name="android:textSize">@dimen/secondary_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
</resources>
